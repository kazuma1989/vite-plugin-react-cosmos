// https://www.typescriptlang.org/ja/tsconfig
{
  "include": ["**/*"],
  "exclude": ["**/*.d.ts"],

  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,

    "lib": ["ES2021"],
    "module": "CommonJS",
    "target": "ES2021",

    "allowSyntheticDefaultImports": true,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true
  }
}
